<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<import resource="classpath:META-INF/spring/service.xml" />
	<import resource="classpath:META-INF/spring/config.xml" />
	
	<bean id="registry" class="com.alibaba.dubbo.governance.sync.RegistryFactoryBean">
		<property name="serverAddress" value="${dubbo.governance.server.adress}" />
	</bean>
	
	<bean id="governanceCache" class="com.alibaba.dubbo.governance.sync.RegistryServerSync">
		<property name="consolePort" value="${dubbo.governance.console.port}" />
	</bean>
	
	<bean id="memoryStatusChecker"
		class="com.alibaba.dubbo.governance.status.MemoryStatusChecker" />
	<bean id="loadStatusChecker"
		class="com.alibaba.dubbo.governance.status.LoadStatusChecker" />
		
	<bean class="com.alibaba.dubbo.governance.web.util.GovernanceWarmup">
		<property name="memoryStatusChecker" ref="memoryStatusChecker" />
		<property name="loadStatusChecker" ref="loadStatusChecker" />
	</bean>
</beans>